<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="jbpm-bing-translate"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
    <requiredProperty key="service" >
      <defaultValue/>
    </requiredProperty>
    <requiredProperty key="jbpm-version" >
      <defaultValue>5.3.0.Final</defaultValue>
    </requiredProperty>
    <requiredProperty key="drools-version" >
      <defaultValue>5.4.0.Final</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true"  encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.wid</include>
      </includes>
    </fileSet>
    <fileSet filtered="true"  encoding="UTF-8">
      <directory>src/assemble</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true"  encoding="UTF-8">
      <directory>src/test/resources</directory>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/publish</directory>
      <includes>
        <include>**/*.html</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
